<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <changeSet id="202202191" author="kordon">
        <createTable tableName="events">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="code" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="trashed" type="bit(1)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="events" columnName="id" columnDataType="bigint" startWith="10" incrementBy="0"/>

        <createIndex indexName="unique_events_code" tableName="events" >
            <column name="code" />
        </createIndex>
    </changeSet>

    <changeSet id="202202192" author="kordon">
        <createTable tableName="attendee_in_event">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="attendee_code" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="event_code" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="datetime(6)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="attendee_in_event" columnName="id" columnDataType="bigint" startWith="100" incrementBy="1"/>
        <addForeignKeyConstraint baseTableName="attendee_in_event" baseColumnNames="attendee_code" constraintName="attendee_in_event_attendee_code_constraint"
                                 referencedTableName="attendees" referencedColumnNames="code"/>
        <addForeignKeyConstraint baseTableName="attendee_in_event" baseColumnNames="event_code" constraintName="attendee_in_event_event_code_constraint"
                                 referencedTableName="events" referencedColumnNames="code"/>
    </changeSet>

</databaseChangeLog>